{
    "env": {
        "browser": true,
        "es6": true
    },
    "parser":  "@typescript-eslint/parser",
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "no-restricted-syntax" : 0,
        "linebreak-style" : 0,
        "no-plusplus" : 0,
        "import/extensions" : 0,
        "max-len" : 0,
        "no-await-in-loop" : 0,
        "no-param-reassign" : 0,
        "no-underscore-dangle" : 0
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".jsx", ".ts", ".tsx"]
          }
        }
    }    
}
